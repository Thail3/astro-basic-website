---
import Layout from "../layouts/Layout.astro";

const name = "Astro";

const style = "purple";

const users = ["Astro", "React", "TypeScript", "JavaScript", "Vue", "Angular"];

const visuble = false;

const response = await fetch(
  "https://jsonplaceholder.typicode.com/users?_limit=10"
);
const resUsers = await response.json();
---

<Layout>
  <h1 class={style}>Hello {name}</h1>

  <ul>
    {users.map((user) => <li>{user}</li>)}
  </ul>

  {visuble && <p>I AM VISIBLE</p>}
  {visuble ? <p>I am visible</p> : <p>I am not visible</p>}

  <ul>
    {resUsers.map((users: { name: string }) => <li>{users.name}</li>)}
  </ul>
</Layout>

<style>
  h1 {
    color: red;
  }

  .purple {
    color: purple;
  }
</style>
